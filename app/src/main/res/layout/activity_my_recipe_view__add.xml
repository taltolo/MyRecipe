<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyRecipeView_Add">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".RecipeView">

        <androidx.cardview.widget.CardView
            android:id="@+id/CardVIewMyViewRecipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivMyImage"
                    android:layout_width="match_parent"
                    android:layout_height="415dp"
                    android:layout_weight="4"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvMyTitleView"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:ellipsize="end"
                                android:gravity="center|left"
                                android:text="Title"
                                android:textColor="@color/colorAccent"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:autoSizeTextType="uniform"
                                app:fontFamily="@font/simonetta_black_bo" />

                            <TextView
                                android:id="@+id/tvMypreparationMinutes"
                                app:fontFamily="@font/istok_web_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center|top|left"
                                android:text="preparation Minutes"
                                android:textColor="@color/colorAccent"
                                android:textSize="16sp"
                                app:autoSizeMaxTextSize="16dp"
                                app:autoSizeTextType="uniform" />

                            <TextView
                                android:id="@+id/MyIngredientsText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ingredients:"
                                android:textColor="@color/colorAccent"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                app:fontFamily="@font/istok_web_regular" />

                            <TextView
                                android:id="@+id/tvnMyIngredientsView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:autoSizeMinTextSize="14sp"
                                android:ellipsize="end"
                                android:text="Ingredients"
                                android:textColor="@color/colorAccent"
                                app:fontFamily="@font/istok_web_regular"
                                android:textSize="16sp"
                                app:autoSizeMaxTextSize="16dp"
                                app:autoSizeTextType="uniform" />

                            <TextView
                                android:id="@+id/MyInstructionstextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Instructions:"
                                android:textColor="@color/colorAccent"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                app:fontFamily="@font/istok_web_regular" />

                            <TextView
                                android:id="@+id/tvMyDescriptionView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                app:fontFamily="@font/istok_web_regular"
                                android:autoSizeMinTextSize="14sp"

                                android:ellipsize="end"
                                android:isScrollContainer="true"
                                android:singleLine="false"
                                android:text="Description"
                                android:textColor="@color/colorAccent"
                                android:textSize="16sp"
                                app:autoSizeMaxTextSize="17dp"
                                app:autoSizeTextType="uniform" />

                            <TextView
                                android:id="@+id/rateView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:autoSizeMinTextSize="14sp"
                                android:ellipsize="end"
                                android:gravity="center|left"
                                android:text="Rate the recipe:"
                                app:fontFamily="@font/istok_web_regular"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:autoSizeMaxTextSize="16dp"
                                app:autoSizeTextType="uniform" />

                            <RatingBar
                                android:id="@+id/ratingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="47dp"
                                android:layout_gravity="center"
                                android:numStars="5"
                                android:rating="0"
                                android:stepSize="0.5"
                                android:theme="@style/RatingBar" />

                            <Button
                                android:id="@+id/remove_button"
                                android:layout_width="155dp"
                                android:layout_height="wrap_content"
                                app:fontFamily="@font/istok_web_regular"
                                android:layout_gravity="center"
                                android:background="@drawable/border"
                                android:gravity="center"
                                android:text="Remove"
                                android:textColor="#FFFFFF" />
                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>